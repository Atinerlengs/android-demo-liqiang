<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="@drawable/freeme_content_bottom_bg_selector"
    android:id="@+id/calllog_item">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/freeme_list_divider_color"
        android:layout_alignStart="@+id/calllog"/>
    <TextView
        android:id="@+id/calllog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/expanding_entry_card_item_padding_start"
        android:text="@string/freeme_recent_call_all_calllist"
        android:textSize="@dimen/freeme_stranger_ditail_headers_location_size"
        android:textColor="@color/contact_text_common"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/expanding_entry_card_item_padding_start"
        android:src="@drawable/freeme_item_right_arrow_icon"/>
</RelativeLayout>
