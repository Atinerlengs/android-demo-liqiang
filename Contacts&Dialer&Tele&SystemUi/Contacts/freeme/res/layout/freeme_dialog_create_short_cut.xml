<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_short_cut_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/contact_editor_space_medium"
        android:textColor="@color/freeme_title_text_color"
        android:textSize="@dimen/contact_common_text_size"
        android:text="@string/menu_create_contact_shortcut" />

    <ListView
        android:id="@+id/lv_short_cut_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_short_cut_title"
        android:layout_marginTop="@dimen/contact_editor_space_small"
        android:divider="@null" />

</RelativeLayout>