<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/text_input_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/custom_dialog_layout_padding"
    app:errorEnabled="true"
    app:hintEnabled="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/freene_group_name_edit_content_margin"
        android:background="@drawable/freeme_group_name_bg"
        android:paddingHorizontal="@dimen/freene_group_name_edit_content_padding">

        <EditText
            android:id="@android:id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/freene_group_name_edit_content_margin"
            android:layout_toStartOf="@id/freeme_group_name_text_counter"
            android:background="@null"
            android:hint="@string/freeme_group_name_dialog_hint"
            android:inputType="text"
            android:maxLength="@integer/group_name_max_length"
            android:minHeight="@dimen/dialog_edit_text_min_height"
            android:padding="0dp"
            android:singleLine="true"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/freeme_group_name_text_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/freeme_group_name_text_limit"
            android:textColor="@color/freeme_group_name_text_color"
            android:textSize="@dimen/freene_group_name_text_size" />
    </RelativeLayout>
</FrameLayout>
