<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/editor_min_line_item_height"
    android:background="?android:attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/tv_short_cut_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_short_cut_number_type"
        android:layout_marginStart="@dimen/quick_contact_short_cut_item_margin_start"
        android:textColor="@color/freeme_title_text_color"
        android:textSize="@dimen/contact_common_text_size"
        android:ellipsize="end"
        android:maxLines="1" />

    <CheckBox
        android:id="@+id/rb_short_cut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/contact_editor_space_medium"
        android:clickable="false" />

    <TextView
        android:id="@+id/tv_short_cut_number_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/rb_short_cut"
        android:layout_marginEnd="@dimen/contact_editor_space_small"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="13sp"
        android:textColor="#aeaeae" />

</RelativeLayout>