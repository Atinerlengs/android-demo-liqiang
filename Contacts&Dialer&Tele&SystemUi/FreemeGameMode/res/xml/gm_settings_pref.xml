<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory>
        <SwitchPreference
            android:checked="true"
            android:key="game_mode_pref"
            android:title="@string/gm_label" />
    </PreferenceCategory>


    <PreferenceCategory android:key="gm_tool_category">
        <SwitchPreference
            android:checked="true"
            android:key="gm_tool_pref"
            android:summary="@string/gm_tools_summary"
            android:title="@string/gm_tools" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="gm_settings_category"
        android:title="@string/gm_settings_title">

        <SwitchPreference
            android:checked="true"
            android:key="gm_answer_call_pref"
            android:summary="@string/gm_settings_answer_call_summary"
            android:title="@string/gm_settings_answer_call" />

        <SwitchPreference
            android:checked="true"
            android:key="gm_block_notifications_pref"
            android:summary="@string/gm_settings_block_notification_summary"
            android:title="@string/gm_settings_block_notification" />

        <SwitchPreference
            android:checked="true"
            android:key="gm_lock_keys_pref"
            android:summary="@string/gm_settings_lock_keys_summary"
