        <!--
        <com.freeme.preference.FreemeJumpPreference
            android:key="gm_power_saving_pref"
            android:summary="@string/game_mode_dnd_power_saving_off"
            android:title="@string/game_mode_dnd_power_saving"
            android:visibility="gone" />
        -->

        <SwitchPreference
            android:checked="true"
            android:key="gm_block_auto_brightness_pref"
            android:summary="@string/gm_settings_block_auto_brightness_summary"
            android:title="@string/gm_settings_block_auto_brightness" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="gm_app_list_category"
        android:title="@string/gm_app_list_label" />

    <Preference
        android:icon="@drawable/gm_add_app_icon"
        android:key="gm_add_apps_pref"
        android:title="@string/gm_add_apps" />
