<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory>
        <SwitchPreference
            android:key="switcher"
            android:title="@string/onehand_settings_title"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="show_keys"
        android:title="@string/onehand_settings_hardware_key_title">
        <SwitchPreference
            android:key="switch_show_hard_keys"
            android:title="@string/onehand_settings_hardware_key_title"
            android:summary="@string/onehand_settings_hardware_key_summary"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="wakeup_type"
        android:title="@string/onehand_settings_using_category">
        <com.android.settings.preference.RadioButtonPreference
            android:key="gesture_type"
            android:title="@string/onehand_settings_using_gesture"
            android:summary="@string/onehand_settings_using_gesture_summary"/>
        <com.android.settings.preference.RadioButtonPreference
            android:key="button_type"
            android:title="@string/onehand_settings_using_button"
            android:summary="@string/onehand_settings_using_button_summary"/>
    </PreferenceCategory>
</PreferenceScreen>