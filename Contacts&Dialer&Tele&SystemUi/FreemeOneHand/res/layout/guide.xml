<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:importantForAccessibility="yes"
    android:orientation="vertical">

    <com.freeme.onehand.settings.widget.WrapContentHeightViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:importantForAccessibility="noHideDescendants"/>

    <LinearLayout
        android:id="@+id/point_area"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pager_indicator_size"
        android:layout_marginTop="@dimen/pager_indicator_circle_area_margin_top"
        android:layout_marginBottom="@dimen/pager_indicator_circle_area_margin_bottom"
        android:focusable="false"
        android:gravity="center"
        android:importantForAccessibility="noHideDescendants"
        android:layoutDirection="ltr"
        android:orientation="horizontal"/>
</LinearLayout>