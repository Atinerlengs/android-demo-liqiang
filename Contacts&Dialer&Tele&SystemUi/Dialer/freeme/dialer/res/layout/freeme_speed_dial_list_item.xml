<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:layout_marginLeft="6dp"
    android:focusable="false">

    <TextView
        android:id="@+id/sd_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:padding="0dp"
        android:textSize="24sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/sd_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/sd_index"
        android:ellipsize="end"
        android:maxWidth="100dip"
        android:paddingBottom="4dip"
        android:paddingRight="2dip"
        android:singleLine="true"
        android:textColor="#808080"
        android:textSize="12sp"
        android:textStyle="normal"
        android:visibility="gone" />

    <com.freeme.dialer.speeddial.FreemeDontPressWithParentImageView
        android:id="@+id/sd_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="8dip"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="center"
        android:src="@drawable/freeme_speeddial_edit"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sd_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@id/sd_remove"
        android:layout_toRightOf="@id/sd_label"
        android:ellipsize="marquee"
        android:paddingBottom="4dip"
        android:paddingRight="2dip"
        android:singleLine="true"
        android:textColor="#808080"
        android:textSize="12sp"
        android:textStyle="normal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/sd_number"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@id/sd_remove"
        android:layout_toRightOf="@id/sd_index"
        android:ellipsize="marquee"
        android:paddingRight="2dip"
        android:singleLine="true"
        android:textSize="15sp"
        android:textStyle="normal" />

</RelativeLayout>
