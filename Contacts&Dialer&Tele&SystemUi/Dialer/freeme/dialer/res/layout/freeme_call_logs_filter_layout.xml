<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_log_filter_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/freeme_call_logs_filter_layout_height"
    android:background="@color/freeme_content_bg_color_light"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/freeme_call_logs_filter_width"
        android:layout_height="@dimen/freeme_call_logs_filter_height"
        android:background="@drawable/freeme_call_logs_filter_default_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/call_logs_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/freeme_call_logs_filter_left_press_bg_selector"
            android:gravity="center"
            android:text="@string/freeme_call_logs_filter_all"
            android:textColor="@color/freeme_call_logs_filter_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/call_logs_missed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/freeme_call_logs_filter_right_press_bg_selector"
            android:gravity="center"
            android:text="@string/freeme_call_logs_filter_missed"
            android:textColor="@color/freeme_call_logs_filter_text_color"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>