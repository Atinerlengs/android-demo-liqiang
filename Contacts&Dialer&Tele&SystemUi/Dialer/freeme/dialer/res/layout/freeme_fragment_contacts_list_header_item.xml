<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/freeme_list_item_height"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/header_text"
        style="@style/FreemeListItemTextStyle"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/freeme_contacts_list_item_padding_start" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/freeme_contacts_list_item_padding_end"
        android:src="@drawable/freeme_item_right_arrow_icon" />
</FrameLayout>