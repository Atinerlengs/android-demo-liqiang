<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/freeme_incall_floating_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/freeme_incall_floating_btn"
        android:layout_width="@dimen/freeme_incall_floating_view_size"
        android:layout_height="@dimen/freeme_incall_floating_view_size"
        android:layout_centerInParent="true"
        android:background="@drawable/freeme_incall_floating_btn"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/freeme_incall_floating_wave_inner_1"
        android:layout_width="@dimen/freeme_incall_floating_view_ringer_size"
        android:layout_height="@dimen/freeme_incall_floating_view_ringer_size"
        android:layout_centerInParent="true"
        android:background="@drawable/freeme_incall_floating_wave_inner"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/freeme_incall_floating_wave_outer_1"
        android:layout_width="@dimen/freeme_incall_floating_view_ringer_size"
        android:layout_height="@dimen/freeme_incall_floating_view_ringer_size"
        android:layout_centerInParent="true"
        android:background="@drawable/freeme_incall_floating_wave_outer"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/freeme_incall_floating_wave_inner_2"
        android:layout_width="@dimen/freeme_incall_floating_view_ringer_size"
        android:layout_height="@dimen/freeme_incall_floating_view_ringer_size"
        android:layout_centerInParent="true"
        android:background="@drawable/freeme_incall_floating_wave_inner"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/freeme_incall_floating_wave_outer_2"
        android:layout_width="@dimen/freeme_incall_floating_view_ringer_size"
        android:layout_height="@dimen/freeme_incall_floating_view_ringer_size"
        android:layout_centerInParent="true"
        android:background="@drawable/freeme_incall_floating_wave_outer"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/freeme_incall_floating_wave_inner_3"
        android:layout_width="@dimen/freeme_incall_floating_view_ringer_size"
        android:layout_height="@dimen/freeme_incall_floating_view_ringer_size"
        android:layout_centerInParent="true"
        android:background="@drawable/freeme_incall_floating_wave_inner"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/freeme_incall_floating_wave_outer_3"
        android:layout_width="@dimen/freeme_incall_floating_view_ringer_size"
        android:layout_height="@dimen/freeme_incall_floating_view_ringer_size"
        android:layout_centerInParent="true"
        android:background="@drawable/freeme_incall_floating_wave_outer"
        android:visibility="visible" />
</RelativeLayout>
