<com.android.keyguard.EmergencyCarrierArea xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical">

    <com.android.keyguard.CarrierText
        android:id="@+id/carrier_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.android.keyguard.EmergencyButton
            android:id="@+id/emergency_call_button"
            style="@style/Keyguard.TextView.EmergencyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eca_overlap"
            android:layout_weight="1"
            android:text="@*android:string/lockscreen_emergency_call"
            android:textAllCaps="@bool/kg_use_all_caps"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/keyguard_emergency_text_size" />

        <Button
            android:id="@+id/emergency_space_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/emergency_back_button"
            style="@style/Keyguard.TextView.EmergencyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eca_overlap"
            android:layout_weight="1"
            android:text="@string/freeme_keyguard_emergency_back"
            android:textAllCaps="@bool/kg_use_all_caps"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/keyguard_emergency_text_size" />
    </LinearLayout>
</com.android.keyguard.EmergencyCarrierArea>
